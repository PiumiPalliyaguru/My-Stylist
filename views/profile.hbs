<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">
    <title> profile page</title>
    <link rel="stylesheet" type="text/css" href="/styles.css">

    

</head>

<body>

    <!-- Navigation -->
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="/home">My Stylist</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        
                        <li class="nav-item">
                            <a class="nav-link" href="/home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/search">Search Stylist</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Sign Up</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    {{# each profile}}
    <div class="container">
        <div class="row">
            <br>
            <br>
            <div class="col-md-1">
            </div>   
            <div class="col-md-4">
                <div class="basicInfo">
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <h1 id="name"> {{this.firstName}} {{this.lastName}}</h1>
                    {{# each this}}
                    <h3>{{this.location}}</h3>
                    {{/each}}
                    <h4 id="type">{{this.type}}</h4>
                </div>
                <div class="image">
                    <img src="/Images/ProfileImage/{{this.id}}.jpg" class="imgcard" height="300" width="450">
                </div>
                    <div class="skill">
                    {{# each Skills}}
                    {{# each this}}
                    <h5>{{this.skill}}</h5>
                    {{/each}}
                    {{/each}}

                    </div>
                <div class="rate">
                    <br>
                    <br>
                    <h4>Fullday Rate : {{this.fulldayrate}}</h4>
                    <h4>Halfday Rate : {{this.halfdayrate}}</h4>
                   
                </div>

                <div class="">
                    <br><br>
                     <button class="btn btn-primary" type="submit" aria-setsize="3cm" style="background:rgba(66, 65, 65, 0.733)">Veiw Schedule</button>
                      <button class="btn btn-primary" type="submit" aria-setsize="3cm" style="background:rgba(66, 65, 65, 0.733)">Book Now</button>
                </div>
            </div>
            
            <div class="col-md-2">

            </div>
            <div class="col-md-4">
                <div class="gallery">
                    <br>
                    <br>
                    <br>
                    <br>
                    <h2>Gallery</h2>
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="/Images/GalleryImage/{{this.id}}.jpg" style="width:100%;">
                        </div>
                        </br>
                        <div class="item">
                            <img src="/Images/GalleryImage/{{this.id}}.{{this.id}}.jpg" style="width:100%;">
                        </div>
                        </br>
                        <div class="item">
                            <img src="/Images/GalleryImage/{{this.id}}.{{this.id}}.{{this.id}}.jpg" style="width:100%;">
                        </div>
                    </div>
                </div>
            </div>


        </div>
        
        </div>

    </div>
    {{/each}}



    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</body>

</html>